{% assign collection = collections[section.settings.carousel_collection] %}
{% assign maxProducts = section.settings.max_products %}

<div class="featured-product-carousel page-width">
  <div class="featured-products-inner">
    <div class="carousel-header">
      <h2>{{ section.settings.title }}</h2>
      <div class="text-link-wrap">
        <a class="text_btn" href="{{ section.settings.link }}">{{ section.settings.link_text }}</a>
      </div>
    </div>
    <div class="carousel-wrap">
      {% for product in collection.products limit: maxProducts %}
        <div class="carousel-item">
          <a href="{{ product.url }}">
            <div class="carousel-item-inner">
              <div class="carousel-item-image" style="background-image: url({{ product.featured_image | img_url: '600x' }})">             <div class="overlay"></div>
              </div>
              <div class="product-meta">
                <p class="product-title"><strong>{{ product.title }}</strong></p>
                <p><strong>{{ product.price | money }}</strong> {{ product.variants.first.weight | weight_with_unit }}</p>
              </div>
            </div>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Featured Product Carousel",
  "class": "index-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Featured Products"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link Text"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Button Link"
    },
    {
      "type": "collection",
      "id": "carousel_collection",
      "label": "Collection to display"
    },
    {
      "type": "range",
      "min": 6,
      "max": 12,
      "step": 1,
      "label": "How many products shown?",
      "id": "max_products",
      "default": 8
    }
  ],
  "presets": [
    {
      "name": "Featured Products Carousel",
      "category": "Zyber"
    }
  ]
}
{% endschema %}